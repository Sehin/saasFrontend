@model MvcWebRole1.Models.Group
@using MvcWebRole1.Controllers
@using MvcWebRole1.Models
@{
    String groupName = VKWorker.getGroupName(Model);
    String modalName = "VKDeleteGroup" + Model.ID;
}

<div>
    <div class="group-header">
        <h4 class="group-name">@groupName</h4>
        <input type="image" src="~/Content/img/icons/gear-icon.png" class="gear-button-group" data-toggle="modal" data-target="#@modalName" />


    </div>

    <div class="ss-container">
        <div class="ss-header">Статистика</div>
        <div class="stat-body">
            Топ liker - Вася Пупкин<br />
            Топ comment - Иван Чай<br />
            Топ repost - Арсений Нежить<br />
            Постов в группе - N<br />
            Лайков - N<br />
            Репостов - N<br />
        </div>
    </div>

    <!--Комментарии-->
    @{

    }

</div>

<!--Modal for vk group delete-->
<div class="modal fade" id="@modalName" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Удалить группу ВКонтакте</h4>
            </div>
            <div class="modal-body">
                Вы <b>уверены</b>, что хотите удалить группу <b>@groupName</b> из нашей системы?
                <br />
                Это приведет к удалению <b>всего</b>, что было с ней связано.
                <br /><br />

                @using (Html.BeginForm("DeleteGroup", "Vkontakte"))
                {
                    <input type="hidden" value="@Model.ID" name="groupId" />
                    <input type="submit" class="btn btn-danger center-block" value="Удалить" />
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>